{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>ASOIAF Army Builder</h1>


        <form>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="factionSelect">Faction</label>
                        <select class="form-control" id="factionSelect">
                            <option></option>
                            {% for faction in listFaction  %}
                                <option value="{{ faction.id }}">
                                    {{ faction.nom }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="armyPoint">Point de l'armée</label>
                        <input type="number" min="10" max="100" class="form-control" id="armyPoint" placeholder="0">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="commandSelect">Commandant</label>
                        <select class="form-control" id="commandSelect">
                            <option></option>
                            {% for commandant in listCommandant  %}
                                <option value="{{ commandant.id }}" data-cout="{{ commandant.cout }}" data-isunique="{{ commandant.isunique }}">
                                    {{ commandant.nom }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="combatUnit">Unité de combat</label>
                        <button id="btnListUC" type="button" class="btn btn-primary form-control">Ajouter une unité de combat</button>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="nonCombatUnit">Unité non-combatante</label>
                        <button id="btnListNUC" type="button" class="btn btn-primary form-control">Ajouter une unité non-combatante</button>
{#                        <select class="form-control" id="nonCombatUnit">
                            <option></option>
                            {% for ncu in listNCU  %}
                                <option value="{{ ncu.id }}" data-cout="{{ ncu.cout }}" data-isunique="{{ ncu.isunique }}" data-typeunite="{{ ncu.typeIndividu.id }}">
                                    {{ ncu.nom }} (cout : {{ ncu.cout }})
                                </option>
                            {% endfor %}
                        </select>#}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="armyName">Nom de l'armée</label>
                        <input type="email" class="form-control" id="armyName" placeholder="">
                    </div>
                    <br>
                    <button type="button" class="btn btn-default">Générer un PDF</button>

                </div>
                <div class="col-lg-6">
                    <label for="">Résumé</label>
                    <div class="form-group">
                        {#<textarea class="form-control" rows="3" id="resumeSelect"></textarea>#}
                        <ul>
                            <li>Faction : <span class="factionNameResume"></span></li>
                            <li>Commandant : <span class="commandantNameResume">Aucun selectionné</span></li>
                            <li>Point : <span class="pointResume">0</span></li>
                            <li>Unité de combat :
                                <ul class="listCombatUnitNameResume">
                                    {#<li class="nothingUC card">Aucune</li>#}
                                </ul>
                            </li>
                            <li style="float: left">Unité non-combatante :
                                <ul class="listNonCombatUnitNameResume">
                                    {#<li class="nothingNUC card">Aucune</li>#}
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </form>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="modalListUC" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Unité de combat</h4>
                </div>
                <div class="modal-body" id="bodyListUC" style="max-height: 450px; overflow-x: auto">

                </div>
                <div class="modal-footer">
                    {#<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>#}
                    {#<button type="button" class="btn btn-primary">Save changes</button>#}
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalListNUC" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Unité non combattante</h4>
                </div>
                <div class="modal-body"  id="bodyListNUC"  style="max-height: 450px; overflow-x: auto">
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
{% endblock %}

