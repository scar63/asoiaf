{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .form-signin {
            max-width: 330px;
            padding: 15px;
            margin: 0 auto;
        }
    </style>
    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="form-signin" action="{{ path('login') }}" method="post">
        <h2 class="form-signin-heading">Veuillez vous connecter</h2>
        <label for="username" class="sr-only">Username:</label>
        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="Identifiant" required autofocus/>

        <label for="password" class="sr-only">>Password:</label>
        <input type="password" id="password"  class="form-control" name="_password" placeholder="Mot de passe" required/>

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account"/>
        #}
        <br>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
    </form>
{% endblock %}