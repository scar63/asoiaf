{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h1>ASOIAF Army Builder</h1>
        </div>
        <div class="col-lg-2">
            <div class="languageSwitch dropdown pull-right">
                <a class="btn" btn-primary="" dropdown-toggle="" data-toggle="dropdown" href="#">Français&nbsp;<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="">Français</a></li>
                    <li><a href="">English</a></li>
                </ul>
            </div>
        </div>
    </div>
    <form action="{{ path('ajaxGeneratePDF') }}" method="POST">
        <div class="row">
            <div class="col-sm-6">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="factionSelect">Faction</label>
                                <select class="form-control" id="factionSelect">
                                    <option></option>
                                    {% for faction in listFaction  %}
                                        <option value="{{ faction.id }}">
                                            {{ faction.nom }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="armyPoint">Point de l'armée</label>
                                <input type="number" min="10" max="100" class="form-control" id="armyPoint" name="armyPoint"  pattern="\d*">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="commandSelect">Commandant</label>
                                <button id="btnListCmd" type="button" class="btn btn-primary form-control">Ajouter un commandant</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="combatUnit">Unité de combat</label>
                                <button id="btnListUC" type="button" class="btn btn-primary form-control">Ajouter une unité de combat</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="nonCombatUnit">Unité non-combattante (NCU)</label>
                                <button id="btnListNUC" type="button" class="btn btn-primary form-control">Ajouter une unité non-combattante</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="armyName">Nom de l'armée</label>
                                <input type="text" class="form-control" id="armyName" name="armyName" placeholder="">
                            </div>
                        </div>
                    </div>
            </div>
            <div class="col-sm-6">
                <div id="limitOut" class="alert alert-danger hidden" role="alert">Le total de points ne peut pas dépasser la taille limite de l'armée.</div>
                <div id="limitOutNCU" class="alert alert-danger hidden" role="alert">Les points de l'armée non neutre ne peuvent pas dépasser 50% de neutralité.</div>
                <div id="processByTwo" class="alert alert-danger hidden" role="alert"></div>
                <div class="col-xs-12">
                    <label for="">Résumé</label>
                    <button type="button"  class="btn btn-default pull-right" title="Réinitialiser le formualaire" id="resetForm"><span class="glyphicon glyphicon-refresh"></span></button>
                        <div class="form-group">
                            <ul>
                                <li>Faction : <span class="factionNameResume"></span></li>
                                <li>Commandant : <ul class="commandantNameResume"></ul></li>
                                <li>Points : <span class="pointResume">0</span>/<span class="onPoints">0</span></li>
                                <li>Unités de combat :
                                    <ul class="listCombatUnitNameResume">
                                    </ul>
                                </li>
                                <li style="clear: both;">Unités non-combattantes (NCU) :
                                    <ul class="listNonCombatUnitNameResume">
                                    </ul>
                                </li>
                                <li style="clear: both;display:none"  class="listNameAdversInclude">Attachement à l'adversaire  :</li>
                            </ul>
                        </div>
                        <br>
                        <button id="generatePDF" type="submit" class="btn btn-default pull-right" formtarget="_blank">Générer un PDF</button>
                </div>
            </div>
        </div>
    </form>




    <!-- Modal -->
    <div class="modal fade" id="modalListUC" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Unité de combat</h4>
                </div>
                <div class="modal-body" id="bodyListUC" style="overflow-x: auto">
                    <ul class="listUC"></ul>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalListNUC" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Unité non-combattante (NCU)</h4>
                </div>
                <div class="modal-body"  id="bodyListNUC"  style="overflow-x: auto">
                    <ul class="listNUC"></ul>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalListCmd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Commandant</h4>
                </div>
                <div class="modal-body"  id="bodyListCmd"  style="overflow-x: auto">
                    <ul class="listCmd"></ul>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalListAttachment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Attachment</h4>
                </div>
                <div class="modal-body"  id="bodyListAttachment"  style="overflow-x: auto">
                    <ul class="listAttachment"></ul>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .modal-body li::before {
            content: '';
            content: '';
            color: white;
            float: none;
            padding-right: 0;
            padding-top: 0;
        }

        .languageSwitch  li::before, .attachmentResume::before{
            content: '';
            content: '';
            color: white;
            float: none;
            font-size: 0.8em;
            padding-right: 0;
            padding-top: 0;
        }
        .listUC img, .listNUC img{
            padding-right: 2px;
            padding-left: 2px;
        }


        /*.listCombatUnitNameResume li::before, .listNonCombatUnitNameResume li::before{*/
            /*padding-right: 0;*/
        /*}*/
    </style>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/script.js') }}"></script>
{% endblock %}