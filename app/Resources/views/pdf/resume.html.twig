<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>Asoiaf</title>
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}"></head>
    <style>
        .noFirstNuc {
            padding-left: 4em;
        }

    </style>
{#http://dev.uca.fr/asoiaf/web/app_dev.php/ajaxGeneratePDF?factionID=1&cmdID=1&ucID[]=19#}
<body style='background-image: url("{{ asset('bundles/app/images/firstbackground.jpg') }}");background-image-resize: 1'>

    <div style="position: absolute;margin-top: 3.3em;padding-left: 29.5em">
        <span>Général de l'armée</span>
    </div>

    <div style="position: absolute;margin-top: 5.5em;padding-left: 19em;width: 100%">
        <ul class="list-inline">
{#            <li style="width: 8.2em;float: left"><img class="img-responsive" src="{{ asset('bundles/app/images/uniteus/') ~  pathCmdPicture }}"/></li>#}
            <li style="width: 10em;float: left;" ><img class="img-responsive" src="{{ asset('bundles/app/images/uniteus/') ~  pathTactilCardFirst }}"/></li>
            <li style="width: 10em;float: left;padding-left: 19em"><img class="img-responsive" src="{{ asset('bundles/app/images/uniteus/') ~  pathTactilCardSecond }}"/></li>
            <li style="width: 10em;float: left;padding-left: 0.5em" ><img class="img-responsive" src="{{ asset('bundles/app/images/uniteus/') ~  pathTactilCardThird }}"/></li>
        </ul>
    </div>

    <div style="position: absolute;margin-top: 14em;width: 16em;text-align: center;">
        <span>{{ armyName }}</span>
    </div>

    <div style="position: absolute;margin-top: 17.7em;width: 90px;width: 16em;text-align: center;">
        <span>{{ armyPoint }} points</span>
    </div>

    <div style="position: absolute;margin-top: 22.5em;padding-left: 2em;width: 100%">
        <ul class="list-inline">
            {% for path in listPathNUc %}
                <li style="width: 10em;float: left" {% if not loop.first %}class="noFirstNuc"{% endif %}><img class="img-responsive" src="{{ asset('bundles/app/images/uniteus/') ~  path }}"/></li>
            {% endfor %}
        </ul>
    </div>

    <div style="position: absolute;margin-top: 40em;width: 100%">
        <ul class="list-inline listNuc">
            {% for path in listPathUc %}
                {% for test in path %}
                    <li style="padding-left: 2em" {% if not loop.first %}class=""{% endif %}>
                        <div style="float:left;width: 23.5em;padding-bottom: 1em ">
                            <img class="img-responsive" src="{{ asset('bundles/app/images/uniteus/') ~  test.uc }}" />
                        </div>
                        {% if test.nattchId is defined %}
                            <div style="float: left;width: 9.7em;padding-left:1.9em;padding-top: 0.1em">
                                <img class="img-responsive" src="{{ asset('bundles/app/images/uniteus/') ~  test.nattchId }}"/>
                            </div>
                        {% endif %}
                    </li>
                {% endfor %}
            {% endfor %}
        </ul>
    </div>

</body>
</html>

